<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_new"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/circle"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:fontFamily="serif"
        android:text="circle"
        android:onClick="startCircle"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/key"
        android:text="key"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:onClick="startKey"
        android:fontFamily="serif"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/voice"
        android:text="voice"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:onClick="startVoice"
        android:fontFamily="serif"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gravity"
        android:text="Gravity"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:onClick="startGrav"
        android:fontFamily="serif"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gesture"
        android:text="Gesture"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:onClick="startGes"
        android:fontFamily="serif"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"/>
    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/start_blue"
    android:text="蓝牙"
    style="@style/Widget.AppCompat.Button.Borderless"
    android:fontFamily="serif"
    android:textColor="@android:color/holo_orange_dark"
    android:textSize="18sp"
    android:onClick="startBluetooth"
    android:layout_alignParentBottom="true"
    android:layout_marginLeft="30dp"
    android:layout_marginBottom="30dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_wifi"
        android:text="wifi"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:fontFamily="serif"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp"
        android:onClick="startWiFi"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_test"
        android:text="test"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:fontFamily="serif"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp"
        android:onClick="startTest"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_opencv"
        android:text="CV"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:fontFamily="serif"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp"
        android:onClick="startOpencv"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"/>
</RelativeLayout>